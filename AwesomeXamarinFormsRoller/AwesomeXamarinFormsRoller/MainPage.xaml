<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AwesomeXamarinFormsRoller"
             x:Class="AwesomeXamarinFormsRoller.MainPage"
             Title="Awesome D&amp;D Roller!!!">


  <StackLayout>
   
    <ListView x:Name="lvMenuList" ItemsSource="{Binding MenuItems}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout>
              <Label Text="{Binding Description}" Font="12"  TextColor="Red"/>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  
  </StackLayout>
</ContentPage>